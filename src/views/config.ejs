<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="css/styles.css" />

    <!-- <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet"> -->
    <!-- <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script> -->
    <style>
    body {
        background-color: rgb(233, 233, 210);
    }
    .col{
        display: border-box;
         text-align: center;
    } 
    .row {
        display :border-box;
        width: 90vw;
    }
    .row > .col {
        width: 33%;
        margin: 1vh 1vw;
    }
    .row > .config{
        border: 2px ghostwhite solid;
        background-color: #B0C0D0;
        height: 10vh;
        padding-top: 2vh;
        font-size: large;
        font-weight: bolder;
    }
    </style>

    <link href="../styles/style.css" rel="stylesheet" type="text/css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


</head>

<body>

    <section id="nav">
        <nav class="navbar navbar-dark navbar-expand-lg bg-info fixed-top flex-md-nowrap shadow">
        
        <button class="btn btn-info" type="button" id="sideButton">
            <i class="fa fa-chevron-right" style="font-size: large;"></i>
        </button>

        <a class="navbar-brand" href="">Green Office Network</a>
        </nav>

        <!-- side nav bar -->
        <nav id="sideMenu" class="sideMenu">
        <button class="btn btn-info" type="button" id="sideClose">
            <i class="fa fa-close" style="font-size: large;"></i>
        </button>
        <ul class="navbar-nav">
            <li class="nav-item"> 
            <a class="nav-link" href="../..">
                <i class="fa fa-home"></i>Home</a>
            </li>
            <li class="nav-item"> 
            <a class="nav-link" href="../../powerPlan/userManage">
                <i class="fa fa-calendar-o"></i>Schedule Power Plans
            </a>
            </li>
            <% if (locals.lv>=5) { %>
            <li class="nav-item"> 
                <a class="nav-link" href="../../office/officeManage">
                <i class="fa fa-eye"></i>Manage Office Environment</a>
            </li>
            <% } %>
            <li class="nav-item" id="sideLogout"> 
            <a class="nav-link" id="logout" href="../../auth/logout" onclick="return confirm('sure?')">Log out</a>
            </li>
        </ul>
        </nav>
    </section>

    <div class="container-fluid" style="margin-top :20vh; margin-left: 5vw ; position: relative;">
        <div class="row justify-content-center">
        <div class="col" style="max-width: 500px;">
            <h1 style="text-align: center;">System Configuration</h1>
        </div>
        </div>
        <div class="row justify-content-center">
            <div class="col config" style="opacity: 0;">
                
            </div>
            <div class="col config">
                User
            </div>
            <div class="col config">
                Manager
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col config">
                User Management 
            </div>
            <div class="col config">
                <div class="custom-control custom-switch">
                    <input class="custom-control-input" id="user-management-user" type="checkbox" style="height: 90%;"/>
                    <label class="custom-control-label" for="user-management-user"></label>
                </div>
            </div>
            <div class="col config">
                <div class="custom-control custom-switch">
                    <input class="custom-control-input" id="user-management-manager" type="checkbox"/>
                    <label class="custom-control-label" for="user-management-manager"></label>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col config">
                Socket Management 
            </div>
            <div class="col config">
                <div class="custom-control custom-switch">
                    <input class="custom-control-input" id="socket-management-user" type="checkbox"/>
                    <label class="custom-control-label" for="socket-management-user"></label>
                </div>
            </div>
            <div class="col config">
                <div class="custom-control custom-switch">
                    <input class="custom-control-input" id="socket-management-manager" type="checkbox"/>
                    <label class="custom-control-label" for="socket-management-manager"></label>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col config">
                Workspace Management 
            </div>
            <div class="col config">
                <div class="custom-control custom-switch">
                    <input class="custom-control-input" id="workspace-management-user" type="checkbox"/>
                    <label class="custom-control-label" for="workspace-management-user"></label>
                </div>
            </div>
            <div class="col config">
                <div class="custom-control custom-switch">
                    <input class="custom-control-input" id="workspace-management-manager" type="checkbox"/>
                    <label class="custom-control-label" for="workspace-management-manager"></label>
                </div>
            </div>
        </div>
    </div>

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<script src="../js/sideMenu.js"></script>
<script>
    $("#user-management-user").on('change', function(){
        console.log($("#user-management-user").prop("checked"));
    });
</script>
</body>

</html>
