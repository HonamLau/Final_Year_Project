<script>
  var iterations = parseInt("<%= loop %>");
var datas = 
"<%= datas %>";
//'<%- JSON.stringify(datas) %>';
var array = datas.split(",");
var x = document.getElementById("userBeingChanged");
for(var i=0;i<iterations;++i){
        var option = document.createElement("option");
        option.value = option.text = array[i];
        x.add(option);

    }
</script>
<script>
  document.getElementById("submitt").onclick = function(){

  var q1 = document.getElementById("userBeingChanged");
  var q2 = document.getElementById("levelNumber");
  var UN = q1.options[q1.selectedIndex].value;
  var LV = q2.options[q2.selectedIndex].value;
  console.log(UN);
  
  location.href = "updatePermission"+"?UN="+UN+"&LV="+LV;

}
</script>
