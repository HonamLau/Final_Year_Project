    <link href="../styles/style.css" rel="stylesheet" type="text/css"/>

    <style>body {background-color: rgb(233, 233, 210);}</style>
    
    
  </head>
  <body>
    
    <section id="nav">
    <nav class="navbar navbar-dark navbar-expand-lg bg-info fixed-top flex-md-nowrap shadow">
      
      <button class="btn btn-info" type="button" id="sideButton">
        <i class="fa fa-chevron-right" style="font-size: large;"></i>
      </button>

      <a class="navbar-brand" href="">Green Office Network</a>
    </nav>

    <!-- side nav bar -->
    <nav id="sideMenu" class="sideMenu">
      <button class="btn btn-info" type="button" id="sideClose">
        <i class="fa fa-close" style="font-size: large;"></i>
      </button>
      <ul class="navbar-nav">
        <li class="nav-item"> 
          <a class="nav-link" href="">
            <i class="fa fa-home"></i>Home</a>
        </li>
        <li class="nav-item"> 
          <a class="nav-link" href="powerPlan/userManage">
            <i class="fa fa-calendar-o"></i>Schedule Power Plans
          </a>
        </li>
        <% if (locals.lv>=5) { %>
          <li class="nav-item"> 
            <a class="nav-link" href="office/officeManage">
              <i class="fa fa-eye"></i>Manage Office Environment</a>
          </li>
        <% } %>
        <li class="nav-item" id="sideLogout"> 
          <a class="nav-link" id="logout" href="/auth/logout" onclick="return confirm('sure?')">Log out</a>
        </li>
      </ul>
    </nav>
  </section>
  <section>
    <!-- main content -->
    <div class="container-fluid" style="top: 50%; left:50% ; position: absolute; transform: translate(-50%,-50%);">
      <div class="row justify-content-center">
        <div class="col-6">
          <h1 style="text-align: center;"><strong>Green Office Network</strong></h1>
        </div>
      </div>
        <div class="row justify-content-center">
          <div class="col" style="max-width: 330px;">
            <h2 style="text-align: center;">Welcome Back! <%= name %></h2>
            <button onclick="window.location='143.89.130.87/auth/powerUsed/'" class="btn btn-block btn-info">
              Power Used Today
            </button><br>
            <button onclick="window.location='lookup'" class="btn btn-block btn-primary"> 
              Look up your power use statistics
            </button><br>
            <button id ='schedule' class="btn btn-block btn-secondary">
              Schedule plans for your socket
            </button><br>
            <a href=""></a>
            <a href=""></a>
            <% if (locals.lv>=5) { %>
            <button id='manage' class="btn btn-block btn-danger">
              Manage Your Office Environment
            </button>
            <br>
            <% } %>
            <% if (locals.lv>=10) { %>
              <button id='assign' class="btn btn-block btn-danger">
                Assign Users to table and sockets
              </button>
              <br>
              <% } %>
            <a href="/auth/logout" onclick="return confirm('sure?')">Log Out</a><br>
          </div>
      </div>
    </div>
    <!-- </div> -->
  </section>
    
    
    <script type="text/JavaScript">
      // if(true)
      //   document.getElementById("manage").style.display = "none";
      document.getElementById("schedule").onclick=function(){
        location.href = "/powerPlan/userManage";
      };
      
      document.getElementById("manage").onclick=function(){
        location.href="/office/officeManage";
      };
      
      document.getElementById("lookup").onclick=function(){
        location.href="/powerUse/usage";
      }
       </script>
       <script src="../js/sideMenu.js"></script>
