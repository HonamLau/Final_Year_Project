    <section>
        <!-- main content -->
      <div class="main">
        <div class="row justify-content-center">
          <div class="col">
            <h1 style="text-align: center;"><strong>Green Office Network</strong></h1>
          </div>
        </div>
          <div class="row justify-content-center">
            <div class="col">
              <h2 style="text-align: center;">Welcome Back! <%= name %></h2>
            </div> 
          </div> 
          <div class="row justify-content-center" style="display: none;">
            <div class="col-lg-6" style="margin: 0 auto">
              <h4 style="text-align: center;" id="planinfo" >
                <i class="fa fa-exclamation-circle" style="margin: 0px 7px;"></i>Current Power Scheduling: 
              </h4> 
            </div> 
          </div>   
          <div class="row justify-content-center">
            <div class="col-lg-6" id="attach" style="border:gray 5px dashed; background-color: white; border-radius: 5px; font-size: 5rem; color:gray; height: 400px;">
              <a class="nav-link" id="attachSocket" href="" data-toggle="modal" data-target="#attachModal" style="color: gray;">
                <i class="fa fa-plus" style="font-size: 12rem; padding:5vh 5vw">
                  <h2>Click to Attach a Socket</h2></i>
              </a> 
            </div>
            <div class="col-lg-6" id="attached">
              <div id="socket">
                <!-- <button class="spin circle"></button> -->
                <div class="socket-info">
                  <div class="socket-current"></div>
                  <div class="socket-switch">
                    <label class="switch">
                      <input type="checkbox">
                      <span class="slider"></span>
                    </label>
                  </div>
                </div>
              </div>
              <form id="removeSocket" name="removeFromHome" method="post" action="/removeSocket">
                <button type="button" data-toggle="modal" data-target="#attachModal" class="btn btn-primary btn-lg  m-2" >Change Socket</button>
                <button type="submit" class="btn btn-danger btn-lg m-2" >Remove Socket</button>
              </form>
            </div>
            <!-- <div class="col-lg-6 border border-danger">456</div> -->
          </div>
      </div>
    </section>
    <!-- Modal -->
    <div id="attachModal" class="modal fade" role="dialog">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">    
            <h1 class="modal-title" style="color: green;">Attaching Socket</h1>
          </div>
          <form id="attachToHome" name="attachToHome" method="post" action="/attach">
            <div class="modal-body">
              <div class="row" id="anchorList">
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" id="close" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </form>
        </div>
      </div>
    </div>
    
